          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "New User"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "Andrii@example.com"
          }
        }
      },
      "login": {
        "type": "object",
        "required": [
          "accessToken"
        ],
        "properties": {
          "accessToken": {
            "description": "To access an API",
            "type": "string",
